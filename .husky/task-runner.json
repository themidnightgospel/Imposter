{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "CSharpier",
      "command": "dotnet",
      "args": [
        "csharpier",
        "format",
        "${staged}"
      ],
      "include": [
        "**/*.cs",
        "**/*.props",
        "**/*.csproj"
      ],
      "exclude": [
        "**/*.g.cs",
        "**/GeneratedFiles/**"
      ]
    },
    {
      "name": "Imposter.Abstractions.Tests",
      "command": "dotnet",
      "args": [
        "test",
        "tests/Imposter.Abstractions.Tests/Imposter.Abstractions.Tests.csproj",
        "-c",
        "Release",
        "/p:VERIFICATION_BUILD=true"
      ]
    },
    {
      "name": "Imposter.CodeGenerator.Tests",
      "command": "dotnet",
